{
  "name": "@belachain/contracts",
  "version": "1.0.0",
  "description": "BelaChain DApp Smart Contracts",
  "author": "BelaChain Team",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run script/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run script/deploy.ts --network arbitrumSepolia",
    "deploy:mainnet": "hardhat run script/deploy.ts --network arbitrum",
    "verify": "hardhat verify",
    "format": "prettier --write 'src/**/*.sol' 'test/**/*.ts' 'script/**/*.ts'",
    "lint": "solhint 'src/**/*.sol'",
    "clean": "hardhat clean",
    "node": "hardhat node"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "arbitrum",
    "smart-contracts",
    "dapp",
    "hardhat"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
