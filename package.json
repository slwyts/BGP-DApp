{
  "name": "bgp-dapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.local -e .env.secret -- next dev",
    "dev:testnet": "dotenv -e .env.development -e .env.secret -- next dev",
    "dev:prod": "dotenv -e .env.production -e .env.secret -- next dev",
    "generate:signer": "node -e \"const pk = '0x' + require('crypto').randomBytes(32).toString('hex'); const { privateKeyToAccount } = require('viem/accounts'); console.log('Private Key:', pk); console.log('Address:', privateKeyToAccount(pk).address); require('fs').writeFileSync('.env.secret', 'IP_SIGNER_PRIVATE_KEY=' + pk + '\\n')\"",
    "build:dev": "npm run compile && dotenv -e .env.development -e .env.secret -- next build",
    "build": "npm run compile && dotenv -e .env.production -e .env.secret -- next build",
    "start": "npx serve@latest out",
    "lint": "eslint .",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:base_sep": "hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "time": "node scripts/time-cli.js"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-slot": "1.2.4",
    "@tanstack/react-query": "^5.90.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cobe": "0.6.5",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "ipaddr.js": "^2.3.0",
    "lucide-react": "^0.562.0",
    "motion": "12.24.5",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "viem": "^2.43.5",
    "wagmi": "^2.19.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "baseline-browser-mapping": "^2.9.11",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "hardhat": "^3.1.2",
    "postcss": "^8.5.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
